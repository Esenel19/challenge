{% extends 'base.html.twig' %}

{% block title %}
	Toute nos activités
{% endblock %}

{% block body %}

	<h1 class="text-center" style="color:white">Toutes nos Activités</h1>

	<br>

	<div class="row">
		{% for product in products|sort((a, b) => a.title <=> b.title) %}
			<div class"col-md4" style="padding:2%">
				<div class="card mb-4" style="width: 18rem">
					<h3 class="card-header">{{ product.title }}</h3>
					{# <img src="{{ product.image }}" alt="Image produit"> #}
					<img class="w-100" src="{{ asset('img/') ~ product.image }}" alt="Image de {{ product.title }}">
					<div class="card-body">
						{# <p classe="card-text text-end fw-bold">
							{{ product.price }} $</p> #}
					</div>
					<div class="card-body text-end" style="padding: 2%;">
						{# <a href="{{ path('cart_add', { id: product.id}) }}" class="card-link btn btn-primary">
							Ajouter au panier</a> #}
					</div>
					<div class="card-body text-end" style="padding: 2%;">
						<a href="{{ path('product_show', { id: product.id}) }}" class="card-link btn btn-primary">
						Details Activités</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

